<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".SetPinActivity">


    <TextView
        android:id="@+id/pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="设置Pin"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_above="@+id/pin_et"
        android:layout_marginBottom="100dp"
        android:textColor="#F5F5F5" />

    <EditText
        android:id="@+id/pin_et"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="7dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:inputType="numberPassword"
        android:hint="请输入Pin"
        android:textColorHint="@color/xui_config_color_white"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/apply_btn"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/star_button_select"
        android:layout_below="@+id/pin_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Apply"
        android:textColor="#FFFFFF"/>



</RelativeLayout>